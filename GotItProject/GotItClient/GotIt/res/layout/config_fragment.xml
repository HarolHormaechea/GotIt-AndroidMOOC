<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Switch
        android:id="@+id/config_switch_share_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/config_share_data" />

    <Switch
        android:id="@+id/config_switch_change_notif_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_change_alarm"
        android:textOff="Every 6 hours"
        android:textOn="Every 8 hours" />

</LinearLayout>
